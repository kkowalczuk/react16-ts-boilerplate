{
  "name": "react16-ts-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for the React 16 project with TypeScript",
  "main": "index.tsx",
  "repository": "https://github.com/kkowalczuk/react16-ts-boilerplate.git",
  "author": "Karol Kowalczuk <karolkowalczuk1992@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "dev": "webpack-dev-server --mode development --open --hot",
    "test": "npm-run-all -p test:jest test:tslint test:typecheck",
    "test:jest": "jest --coverage",
    "test:tslint": "tslint -p . -c tslint.json",
    "test:typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.2",
    "ts-loader": "^5.2.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {
    "npm-run-all": "^4.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  }
}